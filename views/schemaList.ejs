<h1>Schemas and Events for <%= programName || 'All Programs' %></h1>

<!-- Schema List -->
<h2>Available Schemas</h2>
<table>
  <thead>
    <tr>
      <th>Schema Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% schemas.forEach(schema => { %>
      <tr>
        <td><%= schema.name %></td>
        <td>
          <button>
            <a href="/data/<%= schema._id %>">View Data</a>
          </button>
          <button>
            <a href="/form/<%= schema._id %>">Open Form</a>
          </button>
          <form action="/delete/schema/<%= schema._id %>" method="POST" style="display:inline;">
            <button type="submit">Delete Schema</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<!-- Event List -->
<h2>Events</h2>
<table>
  <thead>
    <tr>
      <th>Event Title</th>
      <th>Date</th>
      <th>Location</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (events.length > 0) { %>
      <% events.forEach(event => { %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.date.toDateString() %></td>
          <td><%= event.location %></td>
          <td><%= event.status %></td>
          <td>
            <button>
              <a href="/event/<%= event._id %>">View Details</a>
            </button>
            <button>
              <a href="/event/edit/<%= event._id %>">Edit</a>
            </button>
            <form action="/event/delete/<%= event._id %>" method="POST" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr>
        <td colspan="5">No events available</td>
      </tr>
    <% } %>
  </tbody>
</table>
