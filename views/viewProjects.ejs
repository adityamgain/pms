  <link rel="stylesheet" href="/css/viewProjects.css">

<body>
    <div class="container">
        <h1>All Projects</h1>
        <table>
            <thead>
                <tr>
                    <th>Project Name</th>
                    <th>Donor</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Area of Action</th>
                    <th>Reporting Period</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% projects.forEach(project => { %>
                    <tr>
                        <td><%= project.projectName %></td>
                        <td><%= project.donor %></td>
                        <td><%= project.startDate.toDateString() %></td>
                        <td><%= project.endDate.toDateString() %></td>
                        <td><%= project.areaOfAction %></td>
                        <td><%= project.reportingPeriod %></td>
                        <td>
                            <a href="/projects/<%= project._id %>" class="btn-view">View</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/projects/createProject" class="btn-create">Create New Project</a>
    </div>
</body>
</html>